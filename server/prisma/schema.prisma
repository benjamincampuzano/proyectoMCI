// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native","linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum HierarchyRole {
  PASTOR
  LIDER_DOCE
  LIDER_CELULA
  DISCIPULO
  MIEMBRO
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  CONSOLIDATE
}

enum EntityType {
  USER
  GUEST
  CELL
  CONVENTION
  ENCUENTRO
  CLASS
  GOAL
  ENCUENTRO_REGISTRATION
  CONVENTION_REGISTRATION
  ENCUENTRO_PAYMENT
  CONVENTION_PAYMENT
  ENCUENTRO_ATTENDANCE
  ORACION_DE_TRES
  GUEST_CALL
  GUEST_VISIT
  DOCUMENT
}

enum ResourceType {
  DOCUMENT
  VIDEO
  QUIZ
}

enum Sex {
  HOMBRE
  MUJER
}

enum DocumentType {
  RC   // Registro Civil
  TI   // Tarjeta de Identidad
  CC   // Cédula de Ciudadanía
  CE   // Cédula de Extranjería
  PP   // Pasaporte
  PEP  // Permiso Especial de Permanencia
}

enum MaritalStatus {
  SOLTERO
  CASADO
  DIVORCIADO
  VIUDO
  UNION_LIBRE
  SEPARADO
}

enum Network {
  MUJERES
  HOMBRES
  JOVENES
  KIDS
  ROCAS
}

enum GuestStatus {
  NUEVO
  CONTACTADO
  CONSOLIDADO
  GANADO
}

enum AttendanceStatus {
  PRESENTE
  AUSENTE
}

enum ClassAttendanceStatus {
  ASISTE
  AUSENCIA_JUSTIFICADA
  AUSENCIA_NO_JUSTIFICADA
  BAJA
}

enum EnrollmentStatus {
  INSCRITO
  EN_PROGRESO
  COMPLETADO
  ABANDONADO
}

enum ConventionType {
  FAMILIAS
  MUJERES
  JOVENES
  HOMBRES
}

enum RegistrationStatus {
  REGISTERED
  CANCELLED
  ATTENDED
}

enum ConventionPaymentType {
  CONVENTION
  TRANSPORT
  ACCOMMODATION
}

enum EncuentroType {
  MUJERES
  HOMBRES
  JOVENES
}

model UserHierarchy {
  id        Int @id @default(autoincrement())

  parentId  Int
  childId   Int
  role      HierarchyRole

  parent    User @relation("HierarchyParent", fields: [parentId], references: [id], onDelete: Restrict)
  child     User @relation("HierarchyChild", fields: [childId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now()) @db.Timestamptz

  @@unique([parentId, childId])
  @@index([role])
}

model User {
  id        Int @id @default(autoincrement())
  email     String @unique
  phone     String? @unique
  password  String

  isActive  Boolean @default(true)
  mustChangePassword Boolean @default(false)
  isDeleted Boolean @default(false)

  profile   UserProfile?
  roles     UserRole[]

  parents   UserHierarchy[] @relation("HierarchyChild")
  children  UserHierarchy[] @relation("HierarchyParent")

  invitedGuests  Guest[]  @relation("InvitedBy")
  assignedGuests Guest[]  @relation("AssignedTo")

  cellId         Int?
  cell           Cell?    @relation("CellMembers", fields: [cellId], references: [id])
  ledCells       Cell[]   @relation("CellLeader")
  hostedCells    Cell[]   @relation("CellHost")
  doceNetworkCells Cell[] @relation("CellLiderDoce")

  churchAttendances ChurchAttendance[]
  cellAttendances   CellAttendance[]
  seminarEnrollments SeminarEnrollment[]
  classAttendances  ClassAttendance[]

  conventionRegistrations ConventionRegistration[]
  registeredConventions ConventionRegistration[] @relation("ConventionRegistrar")
  
  conventionLeaderships ConventionLeader[]
  encuentroLeaderships   EncuentroLeader[]

  guestCalls      GuestCall[]
  guestVisits     GuestVisit[]

  // School / Discipleship Relations
  professedModules SeminarModule[] @relation("ModuleProfessor")
  auxiliaryModules SeminarModule[] @relation("ModuleAuxiliaries")
  guidedEnrollments SeminarEnrollment[] @relation("AssignedAuxiliar")

  // Encuentro Relations
  coordinatedEncuentros Encuentro[] @relation("EncuentroCoordinator")
  coordinatedConventions Convention[] @relation("ConventionCoordinator")
  encuentroRegistrations EncuentroRegistration[]

  // Metas
  goals           Goal[]   @relation("UserGoals")

  // Oracion De Tres Relations
  oracionesLed      OracionDeTres[] @relation("LiderDoceOracion")
  oracionesMiembro  OracionDeTresMiembro[]

  auditLogs      AuditLog[]

  createdAt DateTime @default(now()) @db.Timestamptz
  updatedAt DateTime @updatedAt @db.Timestamptz

  @@index([email])
  @@index([createdAt])
}

model UserProfile {
  id             Int @id @default(autoincrement())
  userId         Int @unique
  fullName       String
  sex            Sex?
  documentType   DocumentType?
  documentNumber String?
  birthDate      DateTime? @db.Timestamptz
  address        String?
  city           String?
  latitude       Float?
  longitude      Float?
  maritalStatus  MaritalStatus?
  network        Network?
  
  dataPolicyAccepted      Boolean @default(false)
  dataTreatmentAuthorized Boolean @default(false)
  minorConsentAuthorized  Boolean @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([documentType, documentNumber])
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique

  users       UserRole[]
  permissions RolePermission[]
}

model Permission {
  id   Int    @id @default(autoincrement())
  key  String @unique

  roles RolePermission[]
}

model RolePermission {
  roleId       Int
  permissionId Int

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

model UserRole {
  userId Int
  roleId Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

model Guest {
  id            Int         @id @default(autoincrement())
  name          String
  phone         String
  documentType   DocumentType?
  documentNumber String?
  birthDate      DateTime? @db.Timestamptz
  sex            Sex?
  address       String?
  city          String?
  prayerRequest String?
  status        GuestStatus @default(NUEVO)
  isDeleted     Boolean     @default(false)
  
  dataPolicyAccepted      Boolean @default(false)
  dataTreatmentAuthorized Boolean @default(false)
  minorConsentAuthorized  Boolean @default(false)
  
  called         Boolean     @default(false)
  callObservation String?
  visited        Boolean     @default(false)
  visitObservation String?

  invitedById   Int
  invitedBy     User        @relation("InvitedBy", fields: [invitedById], references: [id])
  
  assignedToId  Int?
  assignedTo    User?       @relation("AssignedTo", fields: [assignedToId], references: [id])
  
  calls         GuestCall[]
  visits        GuestVisit[]
  
  encuentroRegistrations EncuentroRegistration[]

  createdAt     DateTime    @default(now()) @db.Timestamptz
  updatedAt     DateTime    @updatedAt @db.Timestamptz

  @@index([status])
  @@index([createdAt])
  @@index([assignedToId])
  @@index([invitedById])
}

model GuestCall {
  id          Int      @id @default(autoincrement())
  guestId     Int
  guest       Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  date        DateTime @default(now()) @db.Timestamptz
  observation String
  callerId    Int?
  caller      User?    @relation(fields: [callerId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now()) @db.Timestamptz
}

model GuestVisit {
  id          Int      @id @default(autoincrement())
  guestId     Int
  guest       Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  date        DateTime @default(now()) @db.Timestamptz
  observation String
  visitorId   Int?
  visitor     User?    @relation(fields: [visitorId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now()) @db.Timestamptz
}

model Cell {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  leaderId    Int
  leader      User     @relation("CellLeader", fields: [leaderId], references: [id])
  hostId      Int?
  host        User?    @relation("CellHost", fields: [hostId], references: [id])
  liderDoceId Int?
  liderDoce   User?    @relation("CellLiderDoce", fields: [liderDoceId], references: [id])
  address     String?
  city        String?
  latitude    Float?
  longitude   Float?
  dayOfWeek   String?
  time        String?
  cellType    String   @default("ABIERTA") // ABIERTA, CERRADA
  members     User[]   @relation("CellMembers")
  attendances CellAttendance[]
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz

  @@index([leaderId])
  @@index([liderDoceId])
  @@index([hostId])
}

model ChurchAttendance {
  id        Int              @id @default(autoincrement())
  date      DateTime @db.Timestamptz
  userId    Int
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    AttendanceStatus @default(PRESENTE)
  createdAt DateTime         @default(now()) @db.Timestamptz
  updatedAt DateTime         @updatedAt @db.Timestamptz

  @@unique([date, userId])
  @@index([date])
  @@index([createdAt])
  @@index([status])
}

model CellAttendance {
  id        Int              @id @default(autoincrement())
  date      DateTime @db.Timestamptz
  cellId    Int
  cell      Cell             @relation(fields: [cellId], references: [id])
  userId    Int
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    AttendanceStatus @default(PRESENTE)
  createdAt DateTime         @default(now()) @db.Timestamptz
  updatedAt DateTime         @updatedAt @db.Timestamptz

  @@unique([date, cellId, userId])
  @@index([date])
  @@index([createdAt])
  @@index([status])
}

model SeminarModule {
  id          Int                 @id @default(autoincrement())
  name        String
  description String?
  moduleNumber Int?               
  code        String?             @unique
  type        String              @default("SEMINARIO") // SEMINARIO, CAPACITACION_DESTINO, ESCUELA
  
  // School Fields
  startDate   DateTime? @db.Timestamptz
  endDate     DateTime? @db.Timestamptz
  professorId Int?
  professor   User?               @relation("ModuleProfessor", fields: [professorId], references: [id], onDelete: SetNull)
  auxiliaries User[]              @relation("ModuleAuxiliaries")

  enrollments SeminarEnrollment[]
  materials   ClassMaterial[]
  createdAt   DateTime            @default(now()) @db.Timestamptz
  isDeleted   Boolean             @default(false)
  updatedAt   DateTime            @updatedAt @db.Timestamptz
}

model ClassMaterial {
  id           Int           @id @default(autoincrement())
  moduleId     Int
  module       SeminarModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  classNumber  Int           // 1-10
  description  String?
  
  resources    ClassResource[]

  createdAt    DateTime      @default(now()) @db.Timestamptz
  updatedAt    DateTime      @updatedAt @db.Timestamptz

  @@unique([moduleId, classNumber])
}

model ClassResource {
  id         Int @id @default(autoincrement())
  materialId Int
  type       ResourceType
  url        String

  material ClassMaterial @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@index([type])
}

model SeminarEnrollment {
  id              Int                @id @default(autoincrement())
  userId          Int
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  moduleId        Int
  module          SeminarModule      @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  status          EnrollmentStatus   @default(INSCRITO)
  assignmentsDone Int                @default(0)
  finalProjectGrade Float?
  
  // School Fields
  assignedAuxiliarId Int?
  assignedAuxiliar   User?           @relation("AssignedAuxiliar", fields: [assignedAuxiliarId], references: [id])
  projectNotes       String?
  finalGrade         Float?

  classAttendances ClassAttendance[]
  createdAt       DateTime           @default(now()) @db.Timestamptz
  updatedAt       DateTime           @updatedAt @db.Timestamptz

  @@unique([userId, moduleId])
  @@index([status])
  @@index([createdAt])
  @@index([moduleId])
  @@index([userId])
}

model ClassAttendance {
  id           Int                   @id @default(autoincrement())
  enrollmentId Int
  enrollment   SeminarEnrollment     @relation(fields: [enrollmentId], references: [id])
  userId       Int
  user         User                  @relation(fields: [userId], references: [id])
  classNumber  Int
  status       ClassAttendanceStatus @default(ASISTE)
  grade        Float?
  notes        String?
  createdAt    DateTime              @default(now()) @db.Timestamptz
  updatedAt    DateTime              @updatedAt @db.Timestamptz

  @@unique([enrollmentId, classNumber])
}

model Convention {
  id          Int      @id @default(autoincrement())
  type        ConventionType
  year        Int
  theme       String?
  cost        Float
  transportCost Float @default(0)
  accommodationCost Float @default(0)
  startDate   DateTime @db.Timestamptz
  endDate     DateTime @db.Timestamptz

  leaders     ConventionLeader[]
  registrations ConventionRegistration[]
  goals         Goal[]
  
  coordinatorId Int?
  coordinator   User?    @relation("ConventionCoordinator", fields: [coordinatorId], references: [id], onDelete: SetNull)
  isDeleted   Boolean  @default(false)

  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz

  @@unique([type, year])
  @@index([type])
  @@index([startDate])
}

model ConventionLeader {
  conventionId Int
  userId       Int

  convention Convention @relation(fields: [conventionId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([conventionId, userId])
}

model ConventionRegistration {
  id                 Int                @id @default(autoincrement())
  userId             Int
  user               User               @relation(fields: [userId], references: [id])
  conventionId       Int
  convention         Convention         @relation(fields: [conventionId], references: [id], onDelete: Cascade)
  status             RegistrationStatus @default(REGISTERED)
  discountPercentage Float              @default(0)
  needsTransport     Boolean            @default(false)
  needsAccommodation Boolean            @default(false)
  
  registeredById     Int?
  registeredBy       User?              @relation("ConventionRegistrar", fields: [registeredById], references: [id], onDelete: SetNull)

  payments           ConventionPayment[]
  createdAt          DateTime           @default(now()) @db.Timestamptz
  updatedAt          DateTime           @updatedAt @db.Timestamptz

  @@unique([userId, conventionId])
  @@index([status])
  @@index([createdAt])
}

model ConventionPayment {
  id             Int                    @id @default(autoincrement())
  registrationId Int
  registration   ConventionRegistration @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  amount         Float
  paymentType    ConventionPaymentType  @default(CONVENTION)
  date           DateTime               @default(now()) @db.Timestamptz
  notes          String?
  createdAt      DateTime               @default(now()) @db.Timestamptz
  updatedAt      DateTime               @updatedAt @db.Timestamptz
}

model Encuentro {
  id          Int      @id @default(autoincrement())
  type        EncuentroType
  name        String
  description String?
  cost        Float
  startDate   DateTime @db.Timestamptz
  endDate     DateTime @db.Timestamptz

  leaders     EncuentroLeader[]
  registrations EncuentroRegistration[]
  goals         Goal[]
  
  coordinatorId Int?
  coordinator   User?    @relation("EncuentroCoordinator", fields: [coordinatorId], references: [id], onDelete: SetNull)
  isDeleted     Boolean  @default(false)

  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz

  @@index([type])
  @@index([startDate])
}

model EncuentroLeader {
  encuentroId Int
  userId      Int

  encuentro Encuentro @relation(fields: [encuentroId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([encuentroId, userId])
}

model EncuentroRegistration {
  id                 Int                @id @default(autoincrement())
  
  guestId            Int?
  guest              Guest?             @relation(fields: [guestId], references: [id], onDelete: Cascade)
  
  userId             Int?
  user               User?              @relation(fields: [userId], references: [id], onDelete: Cascade)

  encuentroId        Int
  encuentro          Encuentro          @relation(fields: [encuentroId], references: [id], onDelete: Cascade)
  status             RegistrationStatus @default(REGISTERED)
  discountPercentage Float              @default(0)
  payments           EncuentroPayment[]
  classAttendances   EncuentroClassAttendance[]
  createdAt          DateTime           @default(now()) @db.Timestamptz
  updatedAt          DateTime           @updatedAt @db.Timestamptz

  @@unique([guestId, encuentroId])
  @@unique([userId, encuentroId])
  @@index([status])
  @@index([createdAt])
}

model EncuentroPayment {
  id             Int                    @id @default(autoincrement())
  registrationId Int
  registration   EncuentroRegistration  @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  amount         Float
  date           DateTime               @default(now()) @db.Timestamptz
  notes          String?
  createdAt      DateTime               @default(now()) @db.Timestamptz
  updatedAt      DateTime               @updatedAt @db.Timestamptz
}

model EncuentroClassAttendance {
  id             Int                    @id @default(autoincrement())
  registrationId Int
  registration   EncuentroRegistration  @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  classNumber    Int                    // 1-5 (Pre), 6-10 (Post)
  attended       Boolean                @default(false)
  date           DateTime               @default(now()) @db.Timestamptz
  createdAt      DateTime               @default(now()) @db.Timestamptz
  updatedAt      DateTime               @updatedAt @db.Timestamptz

  @@unique([registrationId, classNumber])
}

model AuditLog {
  id          Int @id @default(autoincrement())
  userId      Int?
  action      AuditAction
  entityType  EntityType
  entityId    Int?
  details     Json?

  ipAddress   String?
  userAgent   String?

  createdAt   DateTime @default(now()) @db.Timestamptz

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([entityType, entityId])
  @@index([action])
  @@index([createdAt])
}

enum GoalType {
  ENCUENTRO_REGISTRATIONS
  ENCUENTRO_CONVERSIONS
  CONVENTION_REGISTRATIONS
  CELL_COUNT
  CELL_ATTENDANCE
}

model Goal {
  id          Int      @id @default(autoincrement())
  type        GoalType
  targetValue Float
  
  // Referencias a eventos específicos (quincenal/trimestral)
  encuentroId Int?
  encuentro   Encuentro? @relation(fields: [encuentroId], references: [id])
  
  conventionId Int?
  convention   Convention? @relation(fields: [conventionId], references: [id])
  
  // Referencia temporal para metas mensuales (Células)
  month       Int?
  year        Int?

  // Alcance de la meta (Líder 12 o toda la iglesia)
  userId      Int?      // El líder al que aplica la meta
  user        User?     @relation("UserGoals", fields: [userId], references: [id])

  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz
}

enum OracionDeTresStatus {
  ACTIVO
  FINALIZADO
}

model OracionDeTres {
  id           Int                  @id @default(autoincrement())
  liderDoceId  Int
  liderDoce    User                 @relation("LiderDoceOracion", fields: [liderDoceId], references: [id])
  fechaInicio  DateTime             @db.Timestamptz
  fechaFin     DateTime             @db.Timestamptz
  estado       OracionDeTresStatus  @default(ACTIVO)
  
  miembros     OracionDeTresMiembro[]
  personas     OracionDeTresPersona[]
  reuniones    OracionDeTresReunion[]

  createdAt    DateTime             @default(now()) @db.Timestamptz
  updatedAt    DateTime             @updatedAt @db.Timestamptz

  @@index([liderDoceId])
  @@index([estado])
}

model OracionDeTresMiembro {
  id               Int           @id @default(autoincrement())
  oracionDeTresId  Int
  discipuloId      Int
  
  oracionDeTres    OracionDeTres @relation(fields: [oracionDeTresId], references: [id], onDelete: Cascade)
  discipulo        User          @relation(fields: [discipuloId], references: [id])

  @@unique([oracionDeTresId, discipuloId])
}

model OracionDeTresPersona {
  id               Int           @id @default(autoincrement())
  oracionDeTresId  Int
  nombre           String
  telefono         String
  
  oracionDeTres    OracionDeTres @relation(fields: [oracionDeTresId], references: [id], onDelete: Cascade)
}

model OracionDeTresReunion {
  id               Int           @id @default(autoincrement())
  oracionDeTresId  Int
  fecha            DateTime      @db.Date
  hora             String        
  
  oracionDeTres    OracionDeTres @relation(fields: [oracionDeTresId], references: [id], onDelete: Cascade)
  
  createdAt        DateTime      @default(now()) @db.Timestamptz

  @@index([oracionDeTresId])
}

model LegalDocument {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @db.Timestamptz
  updatedAt DateTime @updatedAt @db.Timestamptz
}
